---
layout: base.njk
title: Blog
description: Read our latest blog posts and articles
---

<section class="page-header">
  <div class="container">
    <h1>Our Blog</h1>
    <p>Insights, tips, and stories from our team</p>
  </div>
</section>

<!-- Recent Posts Section -->
<section class="blog-section recent-section">
  <div class="container">
    <h2>Recent Posts</h2>
    <div class="posts-grid">
      {% for post in collections.recentPosts %}
      <article class="post-card">
        {% if post.data.image %}
        <div class="post-image">
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
        </div>
        {% endif %}
        <div class="post-content">
          <div class="post-meta">
            <span class="post-date">{{ post.data.date | readableDate }}</span>
            {% if post.data.categories %}
            <span class="post-categories">
              {% for category in post.data.categories %}
              <span class="category-tag">{{ category }}</span>
              {% endfor %}
            </span>
            {% endif %}
          </div>
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <p>{{ post.data.excerpt }}</p>
          <a href="{{ post.url }}" class="read-more">Read More →</a>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Featured Posts Section -->
{% if collections.featuredPosts.length > 0 %}
<section class="blog-section featured-section">
  <div class="container">
    <h2>Featured Posts</h2>
    <div class="posts-grid">
      {% for post in collections.featuredPosts %}
      <article class="post-card featured">
        {% if post.data.image %}
        <div class="post-image">
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
          <span class="featured-badge">Featured</span>
        </div>
        {% endif %}
        <div class="post-content">
          <div class="post-meta">
            <span class="post-date">{{ post.data.date | readableDate }}</span>
            {% if post.data.categories %}
            <span class="post-categories">
              {% for category in post.data.categories %}
              <span class="category-tag">{{ category }}</span>
              {% endfor %}
            </span>
            {% endif %}
          </div>
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <p>{{ post.data.excerpt }}</p>
          <a href="{{ post.url }}" class="read-more">Read More →</a>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Posts by Category Section -->
<section class="blog-section categories-section">
  <div class="container">
    <h2>Browse by Category</h2>
    
    {% set allCategories = collections.posts | getAllCategories %}
    
    <div class="category-filter">
      {% for category in allCategories %}
      <button class="category-btn" data-category="{{ category }}">{{ category }}</button>
      {% endfor %}
    </div>

    {% for category in allCategories %}
    <div class="category-posts" data-category="{{ category }}">
      <h3>{{ category }}</h3>
      <div class="posts-grid">
        {% for post in collections.posts | filterByCategory(category) | reverse | slice(0, 4) %}
        <article class="post-card">
          {% if post.data.image %}
          <div class="post-image">
            <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
          </div>
          {% endif %}
          <div class="post-content">
            <div class="post-meta">
              <span class="post-date">{{ post.data.date | readableDate }}</span>
            </div>
            <h4><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
            <p>{{ post.data.excerpt }}</p>
            <a href="{{ post.url }}" class="read-more">Read More →</a>
          </div>
        </article>
        {% endfor %}
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<!-- All Posts Section -->
<section class="blog-section all-posts-section">
  <div class="container">
    <h2>All Posts</h2>
    <div class="posts-list">
      {% for post in collections.posts %}
      <article class="post-list-item">
        <div class="post-list-content">
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <div class="post-meta">
            <span class="post-date">{{ post.data.date | readableDate }}</span>
            {% if post.data.categories %}
            <span class="post-categories">
              {% for category in post.data.categories %}
              <span class="category-tag">{{ category }}</span>
              {% endfor %}
            </span>
            {% endif %}
          </div>
          <p>{{ post.data.excerpt }}</p>
        </div>
        <a href="{{ post.url }}" class="btn btn-sm">Read Post</a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>