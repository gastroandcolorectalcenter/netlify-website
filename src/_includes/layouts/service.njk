{# Language Toggle & Anchor Removal Script - MUST be outside article tag #}
<script>
  // Language Toggle Functionality
  function switchLanguage(lang) {
    console.log('Switching to language:', lang); // Debug log
    
    // Update button states
    document.querySelectorAll('.lang-btn').forEach(btn => {
      btn.classList.remove('active');
      if (btn.dataset.lang === lang) {
        btn.classList.add('active');
      }
    });

    // Get all content in service-body
    const serviceBody = document.querySelector('.service-body');
    if (!serviceBody) {
      console.error('service-body not found');
      return;
    }

    // Show/hide content based on language
    if (lang === 'en') {
      // Hide all Nepali content
      serviceBody.querySelectorAll('[data-lang="ne"]').forEach(el => {
        el.style.display = 'none';
      });
      // Show all content without data-lang or with data-lang="en"
      serviceBody.querySelectorAll('*').forEach(el => {
        if (!el.hasAttribute('data-lang') || el.getAttribute('data-lang') === 'en') {
          if (el.style.display === 'none' && el.getAttribute('data-lang') !== 'ne') {
            el.style.display = '';
          }
        }
      });
    } else if (lang === 'ne') {
      // Hide all content without data-lang attribute (English content)
      serviceBody.querySelectorAll('*').forEach(el => {
        if (!el.hasAttribute('data-lang')) {
          // Check if it's a direct child or important element
          if (el.tagName.match(/^H[1-6]$/) || el.tagName === 'P' || el.tagName === 'UL' || el.tagName === 'OL' || el.tagName === 'DIV') {
            // Only hide if it's not inside a data-lang="ne" element
            let parent = el.parentElement;
            let insideNepali = false;
            while (parent && parent !== serviceBody) {
              if (parent.getAttribute('data-lang') === 'ne') {
                insideNepali = true;
                break;
              }
              parent = parent.parentElement;
            }
            if (!insideNepali) {
              el.style.display = 'none';
            }
          }
        } else if (el.getAttribute('data-lang') === 'en') {
          el.style.display = 'none';
        }
      });
      // Show all Nepali content
      serviceBody.querySelectorAll('[data-lang="ne"]').forEach(el => {
        el.style.display = 'block';
      });
    }

    // Save preference
    localStorage.setItem('preferredLanguage', lang);
  }

  // Remove anchor links from all headings
  function removeAnchorLinks() {
    console.log('Removing anchor links'); // Debug log
    
    // Remove direct-link, header-anchor, and any anchor with # href
    document.querySelectorAll('.service-body h1, .service-body h2, .service-body h3, .service-body h4, .service-body h5, .service-body h6').forEach(heading => {
      // Remove anchor elements
      const anchors = heading.querySelectorAll('a.header-anchor, a.direct-link, a[href^="#"]');
      anchors.forEach(anchor => {
        console.log('Removing anchor from:', heading.textContent); // Debug log
        anchor.remove();
      });
      
      // Also check for anchor symbols in text
      if (heading.textContent.includes('#')) {
        heading.textContent = heading.textContent.replace(/#/g, '').trim();
      }
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializePage);
  } else {
    initializePage();
  }

  function initializePage() {
    console.log('üîç Initializing page'); // Debug log
    
    // Check if there's Nepali content on the page
    const nepaliElements = document.querySelectorAll('[data-lang="ne"]');
    const hasNepaliContent = nepaliElements.length > 0;
    console.log('üîç Has Nepali content:', hasNepaliContent); // Debug log
    console.log('üîç Nepali elements found:', nepaliElements.length); // Debug log
    
    // Find the Nepali button
    const nepaliBtn = document.querySelector('.lang-btn[data-lang="ne"]');
    console.log('üîç Nepali button found:', nepaliBtn ? 'YES' : 'NO'); // Debug log
    
    if (hasNepaliContent) {
      console.log('‚úÖ Nepali content detected - enabling button');
      // Get saved preference or default to English
      const savedLang = localStorage.getItem('preferredLanguage') || 'en';
      console.log('üîç Saved language preference:', savedLang); // Debug log
      switchLanguage(savedLang);
    } else {
      console.log('‚ùå No Nepali content - disabling button');
      // If no Nepali content, disable Nepali button but DON'T hide it
      if (nepaliBtn) {
        nepaliBtn.style.opacity = '0.5';
        nepaliBtn.style.cursor = 'not-allowed';
        nepaliBtn.disabled = true;
        nepaliBtn.onclick = function(e) {
          e.preventDefault();
          alert('Nepali translation coming soon!');
          return false;
        };
      }
      // Make sure English content is visible
      switchLanguage('en');
    }

    // Remove anchor links after a short delay to ensure content is fully rendered
    setTimeout(removeAnchorLinks, 100);
  }
</script>