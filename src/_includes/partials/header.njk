<header class="site-header" role="banner">
  <nav class="navbar" aria-label="Main navigation">
    <div class="nav-container">
      {# Left Side - Logo and Call Button #}
      <div class="nav-left">
        {# Logo #}
        <a href="/" class="logo" aria-label="Home">
          <span class="logo-text">{{ site.name }}</span>
        </a>
        
        {# Call Button #}
        <a href="tel:{{ site.contact.phone }}" class="call-button" aria-label="Call us at +9779851117844">
          {% include "svg/phone.njk" %}
          <span class="call-text">Call Now</span>
        </a>
      </div>
      
      {# Right Side - Navigation Menu #}
      <div class="navbar-right">
        {# Mobile Menu Toggle #}
        <button class="menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false" aria-controls="nav-menu">
          <span class="hamburger" aria-hidden="true"></span>
          <span class="hamburger" aria-hidden="true"></span>
          <span class="hamburger" aria-hidden="true"></span>
        </button>
        
        {# Navigation Menu #}
        <ul class="nav-menu" id="nav-menu" role="menubar">
          {% for item in navigation.main %}
            {% if item.type == "button" %}
              <li class="nav-item" role="none">
                <a href="{{ item.url }}" class="nav-link nav-apt" role="menuitem">
                  {{ item.text }}
                </a>
              </li>
            {% else %}
              <li class="nav-item" role="none">
                <a href="{{ item.url }}" 
                   class="nav-link{% if page.url == item.url or (item.url != '/' and page.url.startsWith(item.url)) %} active{% endif %}"
                   {% if item.type == "anchor" %}data-scroll{% endif %}>
                  {{ item.text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
</header>