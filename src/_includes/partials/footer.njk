<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-content">
      {# Online Consultation Section #}
      <div class="footer-section footer-consultation">
        <h3 class="footer-title">Consult Dr. Shah</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.consultation %}
          <li>
            <a href="{{ link.url }}" 
               {% if link.external %}target="_blank" rel="noopener noreferrer"{% endif %}>
              {{ link.text }}
            </a>
          </li>
          {% endfor %}
        </ul>
        
        {# Contact Information #}
        <div class="footer-contact">
          <p class="contact-item">
            {% include "svg/phone.njk" %}
            <a href="tel:{{ site.contact.phone }}">{{ site.contact.phoneDisplay }}</a>
          </p>
          <p class="contact-item">
            {% include "svg/location.njk" %}
            <span>{{ site.contact.address.city }}, {{ site.contact.address.country }}</span>
          </p>
        </div>
      </div>
      
      {# Quick Links Section #}
      <div class="footer-section footer-quick-links">
        <h3 class="footer-title">Quick Links</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.quickLinks %}
          <li>
            <a href="{{ link.url }}">{{ link.text }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      
      {# Connect With Us Section #}
      <div class="footer-section footer-social">
        <h3 class="footer-title">Connect With Us</h3>
        <div class="social-links">
          {% for platform in social.social %}
          <a href="{{ platform.url }}" 
             class="social-link" 
             target="_blank" 
             rel="noopener noreferrer"
             aria-label="{{ platform.name }}">
            {% include "svg/" + platform.icon + ".njk" %}
          </a>
          {% endfor %}
        </div>
        
        {# Newsletter Signup #}
        <div class="footer-newsletter">
          <p class="newsletter-label">Subscribe to our newsletter</p>
          <form action="https://formspree.io/f/{{ site.formspree.contactFormId }}" 
                method="POST" 
                class="newsletter-form">
            <input type="hidden" name="_subject" value="Newsletter Subscription">
            <input type="email" 
                   name="email" 
                   placeholder="Your email" 
                   required 
                   aria-label="Email address">
            <button type="submit" aria-label="Subscribe">
              {% include "svg/send.njk" %}
            </button>
          </form>
        </div>
      </div>
    </div>
    
    {# Footer Bottom #}
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {{ "now" | currentYear }} {{ site.name }}. All rights reserved.
      </p>
      <p class="footer-credit">
        <a href="/privacy/">Privacy Policy</a> | 
        <a href="/disclaimer/">Terms of Service</a>
      </p>
    </div>
  </div>
</footer>