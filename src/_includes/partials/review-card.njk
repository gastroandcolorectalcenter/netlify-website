{# 
  Review Card Component
  
  Expected variables:
  - review (review object with name, location, rating, review text, etc.)
#}

<div class="review-card">
  {# Star Rating #}
  <div class="review-rating" role="img" aria-label="Rating: {{ review.rating }} out of 5 stars">
    {% for i in range(1, 6) %}
      {% if i <= review.rating %}
        <span class="star star-filled" aria-hidden="true">★</span>
      {% else %}
        <span class="star star-empty" aria-hidden="true">☆</span>
      {% endif %}
    {% endfor %}
  </div>
  
  {# Review Text #}
  <blockquote class="review-text">
    <p>"{{ review.review }}"</p>
  </blockquote>
  
  {# Reviewer Information #}
  <div class="review-author">
    <div class="author-info">
      <p class="author-name">{{ review.name }}</p>
      <p class="author-meta">
        <span class="author-location">{{ review.location }}</span>
        {% if review.surgery %}
        <span class="author-surgery">• {{ review.surgery }}</span>
        {% endif %}
      </p>
    </div>
    
    {# Verified Badge #}
    {% if review.verified %}
    <span class="verified-badge" title="Verified Patient">
      {% include "svg/check-circle.njk" %}
      <span>Verified</span>
    </span>
    {% endif %}
  </div>
</div>