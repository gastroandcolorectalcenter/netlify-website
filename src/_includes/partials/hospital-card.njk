{# 
  Hospital Card Component
  
  Expected variables:
  - hospital (object with name, location, image, schedule, etc.)
#}

<div class="grid-item">
  {% if hospital.image %}
  <div class="grid-image">
    <img class="cr-img" src="{{ hospital.image }}" alt="{{ hospital.name }}" loading="lazy">
  </div>
  {% endif %}
  
  <div class="hospital-content">
    <h3 class="hospital-name">{{ hospital.name }}</h3>
    
    <p class="hospital-location">
      {% include "svg/location.njk" %}
      <span>{{ hospital.location }}</span>
    </p>
    
    {# Schedule #}
    {% if hospital.schedule %}
    <div>
      <h4 class="schedule-title">
        {% include "svg/clock.njk" %}
        <span>OPD Time</span>
      </h4>
      <ul class="schedule-list">
        {% for slot in hospital.schedule %}
        <li class="schedule-item">
          <strong>{{ slot.day }}:</strong> {{ slot.time }}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    
    {# Contact & Map #}
    <div class="hospital-actions">
      {% if hospital.phone %}
      <a href="tel:{{ hospital.phone }}" class="hospital-action-btn">
        {% include "svg/phone.njk" %}
        <span>Call</span>
      </a>
      {% endif %}
      
      {% if hospital.website %}
      <a href="{{ hospital.website }}" 
         class="hospital-action-btn" 
         target="_blank" 
         rel="noopener noreferrer">
        {% include "svg/external-link.njk" %}
        <span>Website</span>
      </a>
      {% endif %}
      
      {% if hospital.mapUrl %}
      <a href="{{ hospital.mapUrl }}" 
         class="hospital-action-btn" 
         target="_blank" 
         rel="noopener noreferrer">
        {% include "svg/map.njk" %}
        <span>Directions</span>
      </a>
      {% endif %}
    </div>
  </div>
</div>