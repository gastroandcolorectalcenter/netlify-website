---
layout: base.njk
---

<article class="blog-post">
  <header class="post-header">
    <div class="container">
      {% if featured %}
      <span class="featured-badge">Featured Post</span>
      {% endif %}
      <h1>{{ title }}</h1>
      <div class="post-meta">
        <span class="post-date">{{ date | readableDate }}</span>
        {% if author %}
        <span class="post-author">By {{ author }}</span>
        {% endif %}
        {% if categories %}
        <span class="post-categories">
          {% for category in categories %}
          <span class="category-tag">{{ category }}</span>
          {% endfor %}
        </span>
        {% endif %}
      </div>
    </div>
  </header>

  {% if image %}
  <div class="post-featured-image">
    <img src="{{ image }}" alt="{{ title }}">
  </div>
  {% endif %}

  <div class="post-content">
    <div class="container">
      {{ content | safe }}
    </div>
  </div>

  <footer class="post-footer">
    <div class="container">
      <div class="post-navigation">
        <a href="/blog/" class="btn btn-secondary">‚Üê Back to Blog</a>
      </div>
      
      {% if tags %}
      <div class="post-tags">
        <strong>Tags:</strong>
        {% for tag in tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </footer>
</article>